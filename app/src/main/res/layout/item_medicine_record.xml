<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_f2f7ff_5"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minWidth="50dp"
        android:gravity="right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    <TextView
        android:id="@+id/tv_dose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="550"
        android:textColor="#ff333333"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tv_time"
        android:gravity="right"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每天一次"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tv_dose"
        app:layout_constraintTop_toBottomOf="@+id/tv_dose"
        />
    </LinearLayout>


    <View
        android:id="@+id/id_v"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="#C3D3EC"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toRightOf="@+id/ll_left"
       android:layout_marginLeft="11dp"

        />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保健品"
        android:textColor="#ff333333"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/ll_left"
        app:layout_constraintLeft_toRightOf="@+id/id_v"
        android:layout_marginLeft="11dp"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="益气糖浆胶囊"
        android:textColor="#ff333333"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ll_left"
       app:layout_constraintLeft_toLeftOf="@+id/tv_type"
        />



</androidx.constraintlayout.widget.ConstraintLayout>