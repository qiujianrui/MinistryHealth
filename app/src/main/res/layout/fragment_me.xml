<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.me.MeFragment"
    android:background="@mipmap/ic_home_bg"
    >
    <TextView
        android:id="@+id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的"
        android:textColor="#ffffffff"
        android:textSize="@dimen/titleSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        />
    <View
        android:id="@+id/id_view_top"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/shape_f3f9ff_5"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/id_title"
        />
    <ImageView
        android:id="@+id/img_head"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="#F7D5A3"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/id_view_top"
        app:layout_constraintTop_toTopOf="@+id/id_view_top"
        app:layout_constraintBottom_toBottomOf="@+id/id_view_top"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刘勇"
        android:layout_marginLeft="10dp"
        android:textColor="#ff444444"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@+id/img_head"
        app:layout_constraintTop_toTopOf="@+id/id_view_top"
        app:layout_constraintBottom_toTopOf="@+id/id_img_phone"

        />

    <ImageView
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/id_view_top"
        android:id="@+id/id_img_phone"
       app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        android:src="@mipmap/ic_phone"
        android:layout_width="15dp"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13223559876"
        android:textColor="#ff444444"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@+id/id_img_phone"
        app:layout_constraintTop_toTopOf="@+id/id_img_phone"
        app:layout_constraintBottom_toBottomOf="@+id/id_img_phone"
        />

    <LinearLayout
        android:id="@+id/ll_reset_paw"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/id_view_top"
        android:background="@drawable/shape_white_5"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="23dp"
            android:src="@mipmap/ic_reset_paw"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:src="@mipmap/ic_next_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_update"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/ll_reset_paw"
        android:background="@drawable/shape_white_5"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="23dp"
            android:src="@mipmap/ic_update_version"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新"
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:src="@mipmap/ic_next_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="退出登录"
        android:textColor="#ff5394c8"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/shape_white_oval"
        app:layout_constraintTop_toBottomOf="@+id/ll_update"
        />
</androidx.constraintlayout.widget.ConstraintLayout>