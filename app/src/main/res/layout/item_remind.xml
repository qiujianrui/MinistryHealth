<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_f2f7ff_5"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/tv_time_end_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:textColor="#ff333333"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/tv_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_end_start"
        />

    <View
        android:id="@+id/id_v"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="#C3D3EC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_time_end"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />



    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="益气糖浆胶囊"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:layout_marginLeft="11dp"
        app:layout_constraintTop_toTopOf="@+id/id_v"
        app:layout_constraintBottom_toBottomOf="@+id/id_v"
        app:layout_constraintLeft_toLeftOf="@+id/id_v"
        />
</androidx.constraintlayout.widget.ConstraintLayout>