<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_f2f7ff_5"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:gravity="center"
        android:lines="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="复诊提醒"
        android:textColor="#ff333333"
        android:textSize="12sp"
    app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="tv_time,tv_hint"/>
    <View
        android:id="@+id/id_v"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#C3D3EC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/id_v"
        app:layout_constraintRight_toLeftOf="@+id/img_edit"
        >
        <LinearLayout
            android:id="@+id/ll_drug_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_drug_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="益气糖浆胶囊益气糖浆胶囊益气糖浆胶囊"
                android:maxEms="12"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:textColor="#ff333333"
                android:textSize="11sp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@+id/tv_drug_data"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/id_v"

                />
            <TextView
                android:id="@+id/tv_drug_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="早中晚早中晚早中晚早中晚早中晚早中晚早中晚早中晚早中晚早中晚"
                android:lines="2"
                android:gravity="center_vertical"
                android:textColor="#ff333333"
                android:textSize="11sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                app:layout_constraintLeft_toRightOf="@+id/tv_drug_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/img_edit"

                />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_drugLong_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/tv_drugLong_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="长针药剂"
            android:textStyle="bold"
            android:textColor="#ff333333"
            android:textSize="11sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/barrier_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/id_v"
            />

        <TextView
            android:id="@+id/tv_drugLong_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="11周 22mg"
            android:textColor="#ff333333"
            android:textSize="11sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_drugLong_name"
            app:layout_constraintTop_toTopOf="@+id/tv_drugLong_name"
            app:layout_constraintRight_toLeftOf="@+id/img_edit"
            />
    </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>