<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_f2f7ff_5"
    android:paddingLeft="22dp"
    android:paddingRight="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:textColor="#ff333333"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="复诊提醒"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="tv_time,tv_hint"/>
    <View
        android:id="@+id/id_v"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="#C3D3EC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        />



    <TextView
        android:id="@+id/tv_drug_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="益气糖浆胶囊"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:layout_marginLeft="11dp"
        app:layout_constraintRight_toLeftOf="@+id/img_edit"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toTopOf="@+id/tv_drugLong_name"
        app:layout_constraintLeft_toLeftOf="@+id/id_v"
        />

    <TextView
        android:id="@+id/tv_drugLong_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="长针药剂"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_drug_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/id_v"
        />

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>