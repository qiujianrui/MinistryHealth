    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="380dp"
        android:textColor="#999999"
        android:hint="请输入手机号"
        android:inputType="number"
        android:gravity="center"
        android:maxLength="11"
        android:background="@drawable/shape_edit_line_5"
        />

    <EditText
        android:id="@+id/edit_paw"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:textColor="#999999"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_phone"
        android:layout_marginTop="25dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:gravity="center"
        android:background="@drawable/shape_edit_line_5"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:textColor="#ffffff"
        android:text="登录"
        app:layout_constraintTop_toBottomOf="@+id/edit_paw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="39dp"
        android:background="@drawable/shape_main_btn_5"
        />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速注册"
        android:textColor="#666666"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_login"
        app:layout_constraintRight_toLeftOf="@+id/id_view_line"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <View
        android:id="@+id/id_view_line"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="#666666"
        app:layout_constraintTop_toTopOf="@+id/tv_register"
        app:layout_constraintBottom_toBottomOf="@+id/tv_register"
        app:layout_constraintLeft_toRightOf="@+id/tv_register"
        app:layout_constraintRight_toLeftOf="@+id/tv_reset_paw"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <TextView
        android:id="@+id/tv_reset_paw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textColor="#666666"
        app:layout_constraintLeft_toRightOf="@+id/id_view_line"
        app:layout_constraintRight_toRightOf="@+id/btn_login"
        app:layout_constraintTop_toTopOf="@+id/tv_register"
        app:layout_constraintBottom_toBottomOf="@+id/tv_register"
        />
    <CheckBox
        android:id="@+id/radio_button_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:layout_constraintTop_toTopOf="@+id/tv_protocol"
        app:layout_constraintBottom_toBottomOf="@+id/tv_protocol"
        app:layout_constraintRight_toLeftOf="@+id/tv_protocol"
        />
    <TextView
        android:id="@+id/tv_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐私政策及用户协议"
        android:textColor="#84B7E8"
        app:layout_constraintTop_toBottomOf="@+id/tv_reset_paw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>