<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_update_app_banner" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >
        <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发现新版本"
        android:textColor="#ff575757"
        android:textSize="20sp"
            android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.增加版本提醒功能"
        android:textColor="#ff575757"
        android:textSize="14sp"
        android:paddingLeft="26dp"
        android:paddingRight="17dp"
        android:paddingTop="10dp"
        android:lineSpacingExtra="5dp"
        />
    <com.azhon.appupdate.dialog.NumberProgressBar
        android:id="@+id/np_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="16dp"
        app:progress_text_color="@color/colorAppDefault"
        app:progress_reached_color="@color/colorAppDefault"
        android:visibility="invisible"
        android:background="#ffffff"
        />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="@drawable/bg_white_radius_6"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn_update"
            android:layout_width="107dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:background="@drawable/shape_blue_gradient_oval"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_btn_close"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_btn_close"
            android:layout_width="107dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="残忍拒绝"
            android:textColor="#ffcacaca"
            android:textSize="15sp"
            android:background="@drawable/shape_gray_oval_line"
            app:layout_constraintLeft_toRightOf="@+id/tv_btn_update"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>