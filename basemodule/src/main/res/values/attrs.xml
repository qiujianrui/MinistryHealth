<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--loading -->
    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension" />
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension" />
        <attr name="indicatorName" format="string" />
        <attr name="indicatorColor" format="color" />
    </declare-styleable>

    <!--状态栏-->
    <declare-styleable name="TitleBarLayout">
        <attr name="left_image" format="reference" />
        <attr name="right_image" format="reference" />
        <attr name="title_image" format="reference" />
        <attr name="right_str" format="string|reference" />
        <attr name="left_str" format="string|reference" />
        <attr name="title_str" format="string|reference" />
        <attr name="is_finish" format="boolean|reference" />
        <attr name="is_show_right" format="boolean" />
        <attr name="is_show_right_img" format="boolean" />
        <attr name="is_title_bold" format="boolean" />
        <attr name="is_show_view" format="boolean" />
        <attr name="bg_color" format="color|reference" />
    </declare-styleable>
    <!--验证码/消费码输入框https://github.com/WGwangguan/SeparatedEditText-->
    <declare-styleable name="SeparatedEditText">
        <attr name="password" format="boolean" />
        <attr name="showCursor" format="boolean" />
        <attr name="separateType" format="reference|integer" />
        <attr name="maxLength" format="integer" />
        <attr name="corner" format="dimension" />
        <attr name="borderColor" format="color|reference" />
        <attr name="blockColor" format="color|reference" />
        <attr name="textColor" format="color|reference" />
        <attr name="blockSpacing" format="dimension" />
        <attr name="cursorDuration" format="integer" />
        <attr name="cursorWidth" format="dimension" />
        <attr name="cursorColor" format="color|reference" />
        <attr name="borderWidth" format="dimension" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>
    <integer name="type_hollow">1</integer>
    <integer name="type_solid">2</integer>
    <integer name="type_underline">3</integer>
    <!--end-->

    <declare-styleable name="VerifyEditText">
        <!--输入框数量-->
        <attr name="inputCount" format="integer" />
        <!--输入框间距-->
        <attr name="inputSpace" format="dimension" />
        <!--下划线厚度-->
        <attr name="underlineHeight" format="dimension" />
        <!--输入框文本大小-->
        <attr name="mTextSize" format="dimension" />
        <!--下划线选中的颜色-->
        <attr name="focusColor" format="color" />
        <!--下划线未选中的颜色-->
        <attr name="defaultColor" format="color" />
        <!--下划线距文本的距离-->
        <attr name="underlineSpace" format="dimension" />
        <!--光标-->
        <attr name="cursorDrawable" format="reference" />
    </declare-styleable>
</resources>